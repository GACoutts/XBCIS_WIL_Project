{
  "name": "xbcis-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:frontend": "npm --prefix frontend run dev",
    "build:frontend": "npm --prefix frontend run build",
    "preview:frontend": "npm --prefix frontend run preview",
    "dev:frontend:wait": "wait-on http://127.0.0.1:5000/api/health && npm run dev:frontend",
    "dev:backend": "npm --prefix backend run dev",
    "dev:both": "concurrently -k -n BE,FE -c blue,green \"npm:dev:backend\" \"npm:dev:frontend:wait\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "nodemon": "^3.1.10",
    "recharts": "^3.2.1",
    "vite": "^7.1.5"
  }
}
