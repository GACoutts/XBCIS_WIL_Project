{
  "name": "xbcis-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:frontend": "npm --prefix frontend run dev",
    "build:frontend": "npm --prefix frontend run build",
    "preview:frontend": "npm --prefix frontend run preview",
    "dev:backend": "npm --prefix backend run dev",
    "dev:both": "concurrently -k -n FE,BE -c green,blue \"npm:dev:frontend\" \"npm:dev:backend\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "nodemailer": "^7.0.6",
    "nodemon": "^3.1.10",
    "recharts": "^3.1.2",
    "sib-api-v3-sdk": "^8.5.0",
    "vite": "^7.1.5"
  }
}
